<!DOCTYPE html>
<html>
  <head>
    <title>DocumentManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="small.css" media="screen and (max-width:480px)">
    <link rel="stylesheet" href="medium.css" media="screen and (min-width:480px) and (max-width:1024px)"> 
    <link rel="stylesheet" href="wide.css" media="screen and (min-width:1024px)">
  </head>

  <body>
    <header>
  	  <h1 class="headline">
        <%= link_to "DocumentManagement", root_path, class:"headline-name" %>
      </h1>
      <ul class="nav-list">
        <li class="nav-list-item">
          <%= link_to "新規文書登録", new_document_path, class:"document-registration" %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-list-item">
          <%= link_to current_user.name, edit_user_registration_path, class: "user-name" %></li>
        </li>
        <li class="nav-list-item">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
        </li>
        <% else %>
        <li class="nav-list-item">
          <%= link_to "ログイン", new_user_session_path, class: "user-session" %>
        </li>
        <li class="nav-list-item">
          <%= link_to "新規ユーザー登録", new_user_registration_path, class: "user-registration" %>
        </li>
        <% end %>
      </ul>
    </header>
    <%= yield %>
    <footer>
      <p>© All rights reserved by Kosei Suzuki.</p>
    </footer>
  </body>
</html>
