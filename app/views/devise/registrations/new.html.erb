<%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
<%= render 'devise/registrations/error_messages', user: @user %>
<div class="registration">
  <div class="registration-contents">ユーザー新規登録</div>
    <%= f.label :name, "ユーザー名" %>
    <%= f.text_field :name, class:"registration-items", placeholder:"氏名を入力してください(8文字以内)" %>
    <%= f.label :department, "所属部署" %>
    <%= f.text_field :department, class:"registration-items", placeholder:"所属部署を入力してください" %>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class:"registration-items", placeholder:"メールアドレスを入力してください" %>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class:"registration-items", placeholder:"パスワードを入力してください(半角英数字混合6文字以上)" %>
    <%= f.label :password_confirmation, "パスワード確認" %>
    <%= f.password_field :password_confirmation, class:"registration-items", placeholder:"同じパスワードを入力してください" %>
    <div class="btn-submit">
    <%= f.submit "新規登録" ,class:"registration-btn" %>
    <%= link_to "戻る", root_path, class:"btn-top-page"%>
    </div>
</div>
<% end %>
