<%= form_with model: @user, url: user_registration_path, method: :post, local: true do |f| %>
<%= render 'devise/registrations/error_messages', user: @user %>
<div class="registration">
  <div class="registration-contents">ユーザー新規登録</div>
    <%= f.label :name, "ユーザー名" %>
    <%= f.text_field :name, class:"registration-items", placeholder:"8文字以内で入力してください" %>
    <%= f.label :department, "所属部署" %>
    <%= f.text_field :department, class:"registration-items", placeholder:"所属している部署(課)名を入力してください" %>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class:"registration-items", placeholder:"ご自身のメールアドレスを入力してください" %>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class:"registration-items", placeholder:"半角英数字混合の6文字以上で入力してください" %>
    <%= f.label :password_confirmation, "確認パスワード" %>
    <%= f.password_field :password_confirmation, class:"registration-items", placeholder:"上記と同じパスワードを入力してください" %>
    <div class="btn-submit">
    <%= f.submit "新規登録" ,class:"registration-btn" %>
    <%= link_to "戻る", root_path, class:"btn-top-page"%>
    </div>
</div>
<% end %>
